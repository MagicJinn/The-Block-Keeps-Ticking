        "main": ["magicjinn.the-block-keeps-ticking.TheBlockKeepsTicking"],
        "client": ["magicjinn.the-block-keeps-ticking.TheBlockKeepsTickingClient"],
        "modmenu": ["magicjinn.the-block-keeps-ticking.config.ModMenuIntegration"]
